{
  "webdriver": {
    "driver": "chrome",
    "window_mode": "maximized",
    "implicit_wait": 0,
    "explicit_wait": 5000
  },

  "rest": {
    "host": "http://localhost:5000",
    "users_path": "users",
    "login_path": "login"
  },

  "env": {
    "default": {
      "host": "http://localhost:8080",

      "pages_path": {
        "home": "",
        "login": "/login.php",
        "register": "/register.php",
        "profile": "user_profile.php"
      }
    },

    "dev": {
      "host": "http://127.0.0.1:8080",

      "pages_path": {
        "home": "",
        "login": "/login.php",
        "register": "/register.php",
        "profile": "user_profile.php"
      }
    }
  }
}